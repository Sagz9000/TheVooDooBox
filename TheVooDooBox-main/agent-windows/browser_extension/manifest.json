{
    "manifest_version": 3,
    "name": "VooDooBox Telemetry Capture",
    "version": "1.0",
    "description": "Captures high-fidelity browser telemetry (URLs, DOM, Redirects) for analysis.",
    "permissions": [
        "webRequest",
        "tabs",
        "activeTab",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://127.0.0.1:1337/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}