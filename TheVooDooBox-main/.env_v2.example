# --- Database Configuration ---
POSTGRES_USER=voodoobox
POSTGRES_PASSWORD=secret_voodoo_password
POSTGRES_DB=voodoobox_telemetry

# --- Host Network Configuration ---
# The IP address of the host machine running the VoodooBox stack.
# Examples: 192.168.1.100 (LAN), 10.0.0.5 (VPN), localhost (Single Node only)
HOST_IP=127.0.0.1

# --- Proxmox Configuration (Sandbox Manager) ---
# URL of your Proxmox server (e.g., https://192.168.1.10:8006)
PROXMOX_URL=https://192.168.1.10:8006
PROXMOX_USER=root@pam
PROXMOX_TOKEN_ID=MalwareLab
PROXMOX_TOKEN_SECRET=your_token_secret_here

# --- AI Configuration ---
# Valid Providers: ollama, openai, anthropic, gemini, copilot
AI_PROVIDER=ollama
AI_MODE=hybrid

# -- Ollama (Local AI) --
# If running locally in Docker, use: http://host.docker.internal:11434
# If running on a separate networked machine, use its IP: http://192.168.1.50:11434
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama-server
EMBEDDING_URL=http://host.docker.internal:11434
EMBEDDING_MODEL=nomic-embed-text

# -- Cloud Providers (Optional) --
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
COPILOT_TOKEN=

# --- External Services ---
# Virustotal API Key for hash lookup
VIRUSTOTAL_API_KEY=

# ChromaDB (Vector Database)
# Default: http://mcp-server:8001 (Internal) or http://192.168.1.50:8001 (External)
CHROMADB_URL=http://mcp-server:8001

# Remnux (Linux Analysis Node)
# URL of the Remnux MCP Server
REMNUX_MCP_URL=http://192.168.1.50:8090/sse
REMNUX_MCP_TOKEN=voodoo-secret-token

# --- Path Configuration ---
# Directory on the HOST where malware samples are stored (mapped to /mnt/voodoo_samples)
SHARED_MALWARE_DIR=./malware_samples
